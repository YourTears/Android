<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="240px"
            android:layout_marginTop="@dimen/me_interval_height"
            android:background="@color/color_info_background">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/id_me_image"
                    android:layout_marginTop="20px"
                    android:layout_marginLeft="60px"
                    android:layout_width="200px"
                    android:layout_height="200px"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/me_content_icon_text_interval">

                    <TextView
                        android:id="@+id/id_textview_me_name"
                        android:layout_width="match_parent"
                        android:gravity="left|bottom"
                        android:textColor="@color/color_main_text"
                        android:textSize="16sp"
                        android:layout_height="120px"/>

                    <TextView
                        android:id="@+id/id_textview_me_id"
                        android:layout_width="match_parent"
                        android:gravity="left|top"
                        android:textColor="@color/color_light_text"
                        android:textSize="14sp"
                        android:layout_height="120px"/>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/me_content_height"
            android:layout_marginTop="@dimen/me_interval_height"
            android:background="@color/color_info_background">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/me_content_margin_top"
                android:layout_marginLeft="@dimen/me_content_margin_left">

                <ImageView
                    android:id="@+id/id_view_me_icon"
                    android:layout_width="@dimen/me_content_icon_size"
                    android:layout_height="@dimen/me_content_icon_size"
                    android:background="@drawable/boyicon"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/me_content_text_size"
                    android:textColor="@color/color_main_text"
                    android:layout_marginLeft="@dimen/me_content_icon_text_interval"
                    android:text="我的信息"/>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/me_content_height"
            android:background="@color/color_info_background">

            <View
                android:layout_height="1px"
                android:background="@color/color_light_line"
                android:layout_width="fill_parent" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/me_content_margin_top"
                android:layout_marginLeft="@dimen/me_content_margin_left">

                <ImageView
                    android:id="@+id/id_view_it_icon"
                    android:layout_width="@dimen/me_content_icon_size"
                    android:layout_height="@dimen/me_content_icon_size"
                    android:background="@drawable/girlicon"/>

                <TextView
                    android:id="@+id/id_textview_it_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/me_content_text_size"
                    android:textColor="@color/color_main_text"
                    android:layout_marginLeft="@dimen/me_content_icon_text_interval"
                    android:text="期待的她"/>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/me_content_height"
            android:layout_marginTop="@dimen/me_interval_height"
            android:background="@color/color_info_background">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/me_content_margin_top"
                android:layout_marginLeft="@dimen/me_content_margin_left">

                <ImageView
                    android:layout_width="@dimen/me_content_icon_size"
                    android:layout_height="@dimen/me_content_icon_size"
                    android:background="@drawable/settingicon"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/me_content_text_size"
                    android:textColor="@color/color_main_text"
                    android:layout_marginLeft="@dimen/me_content_icon_text_interval"
                    android:text="设置"/>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/me_content_height"
            android:layout_marginTop="@dimen/me_interval_height"
            android:background="@color/color_info_background">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/me_content_margin_top"
                android:layout_marginLeft="@dimen/me_content_margin_left">

                <ImageView
                    android:layout_width="@dimen/me_content_icon_size"
                    android:layout_height="@dimen/me_content_icon_size"
                    android:background="@drawable/feedbackicon"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/me_content_icon_text_interval"
                    android:textSize="@dimen/me_content_text_size"
                    android:textColor="@color/color_main_text"
                    android:text="反馈"/>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Users/tiazh/AndroidStudioProjects/AppRTC/app/src/main/res/layout/page_me.xml -->